{
  "compilerOptions": {
    "forceConsistentCasingInFileNames":true,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "moduleResolution":"Node",
    "resolveJsonModule":true,
    "esModuleInterop": true,
    "importHelpers": true,
    "declarationDir": ".",
    "module": "CommonJS",
    "target": "ESNext",
    "declaration":true,
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
  },
  "include": [
    "src/build.ts",
    "src/browser/**/*.ts",
    "src/node/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
